<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AdminEditMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/editMenuResultScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/editMenuBar"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/editMenuResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/editMenuBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_round_rect_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/layout_right_round_rect_white">

                        <ImageView
                            android:id="@+id/editMenuBreakfastImage"
                            android:layout_width="match_parent"
                            android:paddingLeft="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/check_menu_breakfast_logo" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editMenuBreakfastText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="TextView"
                        android:background="@null"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editMenuLunch"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_round_rect_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/layout_right_round_rect_white">

                        <ImageView
                            android:id="@+id/editMenuLunchImage"
                            android:layout_width="match_parent"
                            android:paddingLeft="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/check_menu_lunch_logo" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editMenuLunchText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="TextView"
                        android:background="@null"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editMenuSnacks"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_round_rect_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/layout_right_round_rect_white">

                        <ImageView
                            android:id="@+id/editMenuSnacksImage"
                            android:layout_width="match_parent"
                            android:paddingLeft="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/check_menu_snacks_logo" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editMenuSnacksText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="TextView"
                        android:background="@null"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editMenuDinner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/layout_round_rect_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/layout_right_round_rect_white">

                        <ImageView
                            android:id="@+id/editMenuDinnerImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/check_menu_dinner_logo" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editMenuDinnerText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="TextView"
                        android:background="@null"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/editMenuBar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_above="@+id/editMenuText"
            />
        <TextView
            android:id="@+id/editMenuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Select Day"
            android:textColor="@color/white"
            android:layout_above="@+id/editMenuSpinner"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/editMenuSpinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_above="@+id/editMenuSubmitButton"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/editMenuSubmitButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Update"
            android:layout_marginBottom="20dp"
            android:onClick="updateMenu"
            android:background="@drawable/layout_round_rect_white"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>