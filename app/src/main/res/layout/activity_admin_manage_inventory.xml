<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AdminManageInventoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/adminManageInventoryUtilitiesButton"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="UTILITIES"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:background="@drawable/layout_round_rect_white"/>
        <Button
            android:id="@+id/adminManageInventoryStoredButton"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="STORED"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:background="@drawable/layout_round_rect_white"/>
        <Button
            android:id="@+id/adminManageInventoryDailyButton"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DAILY"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:background="@drawable/layout_round_rect_white"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>