<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".CheckMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/checkMenuResultScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/checkMenuBar"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/checkMenuResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/checkMenuBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_round_rect_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/layout_right_round_rect_white">

                        <ImageView
                            android:id="@+id/checkMenuBreakfastImage"
                            android:layout_width="match_parent"
                            android:paddingLeft="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/check_menu_breakfast_logo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/checkMenuBreakfastText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkMenuLunch"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_round_rect_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/layout_right_round_rect_white">

                        <ImageView
                            android:id="@+id/checkMenuLunchImage"
                            android:layout_width="match_parent"
                            android:paddingLeft="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/check_menu_lunch_logo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/checkMenuLunchText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkMenuSnacks"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_round_rect_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/layout_right_round_rect_white">

                        <ImageView
                            android:id="@+id/checkMenuSnacksImage"
                            android:layout_width="match_parent"
                            android:paddingLeft="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/check_menu_snacks_logo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/checkMenuSnacksText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkMenuDinner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/layout_round_rect_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/layout_right_round_rect_white">

                        <ImageView
                            android:id="@+id/checkMenuDinnerImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/check_menu_dinner_logo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/checkMenuDinnerText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/checkMenuBar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_above="@+id/checkMenuText"
            />
        <TextView
            android:id="@+id/checkMenuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:text="Select Day"
            android:textColor="@color/white"
            android:layout_above="@+id/checkMenuSpinner"
            android:layout_centerHorizontal="true" />
        <Spinner
            android:id="@+id/checkMenuSpinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_round_rect_white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_above="@+id/checkMenuButton"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/checkMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/layout_round_rect_white"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="SUBMIT" />
    </RelativeLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>