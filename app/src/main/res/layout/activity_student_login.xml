<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentLoginActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="@drawable/layout_round_rect_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/studentLoginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="STUDENT LOGIN"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentLoginFeedbackBar1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:text="" />

        <TextView
            android:id="@+id/studentLoginEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter email"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"/>
        <EditText
            android:id="@+id/studentLoginEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="eg. 19ucs001@lnmiit.ac.in"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/studentLoginPasswordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter password"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"/>
        <EditText
            android:id="@+id/studentLoginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/studentLoginSubmitButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_round_rect_pink"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:onClick="login"/>

        <TextView
            android:id="@+id/studentLoginFeedbackBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="----------------------------------------OR----------------------------------------"
            android:gravity="center"
            android:paddingBottom="5dp"/>

        <Button
            android:id="@+id/studentGoogleLoginSubmitButton"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="GOOGLE LOGIN"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:onClick="googleLogin"
            android:textColor="@color/white"
            android:background="@drawable/layout_round_rect_pink"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>