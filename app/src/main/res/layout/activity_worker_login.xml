<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkerLoginActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="@drawable/layout_round_rect_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/workerLoginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="WORKER LOGIN"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workerLoginFeedbackBar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:text="" />

        <TextView
            android:id="@+id/workerLoginEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter email"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"/>
        <EditText
            android:id="@+id/workerLoginEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="eg. worker1@lnmiit.ac.in"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/workerLoginPasswordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter password"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"/>
        <EditText
            android:id="@+id/workerLoginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/workerLoginSubmitButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_round_rect_pink"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:onClick="login"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>